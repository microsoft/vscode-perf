{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "rootDir": "./src",
        "outDir": "./out",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}